<!DOCTYPE html>
<html>
  <head>
    <title>MeetAndEat</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag    'https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'users', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'spots', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'comments', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'home', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'users' %>
    <%= javascript_include_tag 'spots' %>
    <div>
      <nav class="navbar">
    <% if user_signed_in? %>
      <a><%= link_to "M + E", authenticated_root_path, class: "navbar-brand" %></a>
    <% else %>
      <a><%= link_to "M + E", unauthenticated_root_path, class: "navbar-brand" %></a>
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="navbar-options">
      <div class="navbar-nav">
        <% if user_signed_in? %>
        <a><%= link_to "Add new spot!", new_spot_path, class: "nav-item nav-link active" %></a>
        <a><%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "nav-item nav-link active" %></a>
        <a id ='user-profile' class="nav-link"<%= link_to current_user.username, profile_path(current_user.id), :class => 'navbar-link' %></a>
        <% else %>
        <li><a class="nav-link"<%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %></a></li>
        <li><a class="nav-link"<%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %></a></li>
        <% end %>
      </div>
    </div>
    </nav>
    </div>
    <div class="notice"><%= notice %></div>
    <div class="alert"><%= alert %></div>
    <%= yield %>
  </head>

  <body>

  </body>
</html>
