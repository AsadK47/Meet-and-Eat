<div id="all-spots">
  <h2><%= @spot.spot %></h2>
  <p><%= @spot.time %></p>
  <p><%= @spot.location %></p>
  <p><%= @spot.info %></p>
  <p><%= @spot.username %></p>
<%= link_to "Edit", edit_spot_path(@spot), :class => 'btn btn-default' %>
<%= link_to "Delete", spot_path(@spot),
                                      method: :delete,
                                      data: {confirm: 'Are you sure?'},
                                      :class => 'btn btn-danger' %>
</div>
