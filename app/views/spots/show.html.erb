
<%=render 'shared/navigation'%>

<div id="MainContainer">

  <div id="header">
    <div id="SpotName">
      <h1> Spot place : <%= @spot.spot %></h1>
    </div>
    <div id="JoinLocation">
      <%if @spot.followed_by?(current_user) %>
        <p><%= render 'follows/spot_unfollow_option' %></p>
      <% else %>
        <p><%= render 'follows/spot_follow_option' %></p>
      <% end %>
    </div>
  </div>

  <div id="spotMap">
    <iframe
      id="map"
      width="100%"
      height="100%"
      frameborder="0" style="border:0"
      src="https://www.google.com/maps/embed/v1/place?key=<%=ENV['google_maps_api_key']%>
      &q=<%="#{@spot.spot}"%>+<%="#{@spot.location}"%>" allowfullscreen>
    </iframe>
  </div>

  <div id="locationTimeContainer">
    <div id="spotLocation">
      <h3>Location : <%= @spot.location %></h3>
    </div>
    <div id="spotTime">
      <h3>Time : <%= @spot.time_start %> - <%= @spot.time_end %></h3>
    </div>
  </div><hr>

  <div id="spotInfo">
    <div id="userProfilePicture">
      <% if @user.id == @spot.user_id %>
          <%= link_to profile_path(@user.id) do %>
            <% if @user.avatar.attached? %>
              <%= image_tag @user.avatar.variant(resize: "75x75!"), class: "tar rounded-circle" %>
            <% else %>
              <%= image_tag gravatar_image_url(@user.email, size: 75), height: 75, width: 75, class: "tar rounded-circle" %>
            <% end %>
          <% end %>
        <% end %>
      Description:
    </div>

    <div id="userInfo">
      <%= @spot.info %> "
    </div>
  </div><hr>

  <div id="Lunchers">
    <h3>Lunchers :</h3><br>
    <img><% @spot.followers.each do |follower| %>
    <div id="eachLuncher">
      <div id="usernameandphoto">
        <%= link_to profile_path(follower.id) do %>
          <% if follower.avatar.attached? %>
            <%= image_tag follower.avatar.variant(resize: "50x50!"), class: "tar rounded-circle" %>
          <% else %>
            <%= image_tag gravatar_image_url(follower.email, size: 75), height: 50, width: 50, class: "tar rounded-circle" %>
          <% end %>
        <% end %>
        <% @users.each do |user| %>
          <% if user.id == follower.id %>
            <i><b><%= user.username%></b></i>
      </div>
      <i>Preference: <%= user.diet %></i>
            <% if user.diet == "Vegetarian" || user.diet == "vegetarian" %>
              <img class="diet-spot" src="/images/carrot.png"></img>
            <% elsif user.diet == "Vegan" || user.diet == "vegan" %>
              <img class="diet-spot" src="/images/plant.png"></img>
            <% elsif user.diet == "Pescetarian" || user.diet == "pescetarian" %>
              <img class="diet-spot" src="/images/fish.png"></img>
            <% elsif user.diet == "Standard" || user.diet == "standard" || user.diet == "Any" || user.diet == "any" %>
              <img class="diet-spot" src="/images/chicken (1).png"></img>
            <% elsif user.diet == "Lacto-vegetarian" || user.diet == "lacto-vegetarian" || user.diet == "Lacto-Vegetarian" %>
              <img class="diet-spot" src="/images/cow.png"></img>
            <% elsif user.diet == "Ovo-vegetarian" || user.diet == "ovo-vegetarian" || user.diet == "Ovo-Vegetarian" %>
              <img class="diet-spot" src="/images/egg.png"></img>
            <% else %>
              <p>Love all food !</p>
            <% end %>
          <% end %>
          <% end %>
      </div>
      <% end %>
      <div style="clear:both;"></div><br><hr>
  </div>

  <h3 class="textalign">Comments</h3>
<div id="each-comment"><%= render 'spots/partials/spot_comments_content' %></div>
<div class="textalign"><%= render 'spots/partials/spot_comment_form' %></div>


</div>


