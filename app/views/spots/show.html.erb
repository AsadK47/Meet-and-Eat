<div id="all-spots">
  <h2><%= @spot.spot %></h2>
  <p><%= @spot.time %></p>
  <p><%= @spot.location %></p>
  <p><%= @spot.info %></p>
  <p><%= @spot.username %></p>
  <%= image_tag "https://maps.googleapis.com/maps/api/staticmap?zoom=17&size=400x300&markers=size:small%7Ccolor:red%7C#{@spot.latitude},#{@spot.longitude}&key=#{Rails.application.credentials.google_maps_api_key}", alt: "Map" %>
<%= link_to "Edit", edit_spot_path(@spot), :class => 'btn btn-default' %>
<%= link_to "Delete", spot_path(@spot),
                                      method: :delete,
                                      data: {confirm: 'Are you sure?'},
                                      :class => 'btn btn-danger' %>
<%= form_tag follow_spot_path(id: @spot.id), method: :post, remote: true do  %>
    <%= button_tag 'Follow', :class => 'btn btn-success' %>
<% end %>

  <div id="spot-followers">
    <% if @follows != nil %>
      <% @follows.each do |follow| %>
        <% if follow.followable_id == @spot.id %>
        <h3><%= follow.follower.username %></h3>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
