<% @spot.comments.each do |comment| %>
  <div id="comments-content">
    <%= link_to profile_path(comment.user_id) do %>
      <% @users.each do |user| %>
        <% if user.id == comment.user_id %>
          <%= link_to profile_path(user.id) do %>
            <% if user.avatar.attached? %>
              <%= image_tag user.avatar.variant(resize: "40x40!"), class: "tar rounded-circle" %>
                <% if current_user.id == comment.user_id %>
                  <%= link_to 'X', [comment.spot, comment],
                                                          method: :delete,
                                                          data: { confirm: 'Are you sure?'},
                                                          class: "red  btn-sm" %>
                  <% end %>
                <% else %>
                  <%= image_tag gravatar_image_url(user.email, size: 75), height: 40, width: 40, class: "tar rounded-circle" %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>

    <div id="comment-body">
      <p><%= comment.content%></p>
    </div>

    <div id="comment-created-at">
      <small><%= comment.created_at %></small>
    </div>

  </div>
<% end %>
