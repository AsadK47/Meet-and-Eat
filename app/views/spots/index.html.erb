<div class="text">
  <h1>Welcome <%= current_user.username %> to Meet and Eat!</h1>
  Please see the spots available below
</div><br>
<% @spots.each do |spot| %>
  <div id="all-spots">
    <br>
    <p>
      <% if spot.user.avatar.attached? %>
        <%= image_tag spot.user.avatar.variant(resize: "75x75!"), class: "tar rounded-circle" %>
      <% else %>
        <%= image_tag gravatar_image_url(spot.user.email, size: 75), height: 75, width: 75, class: "tar rounded-circle" %>
      <% end %>
    </p>
      <p><%= spot.username %></p>
      <h3><%= spot.spot %></h3>
      <p><%= spot.time %></p>
      <p><%= spot.location %></p>
      <p><%= spot.info %></p>
      <p><%= link_to "View", spot_path(spot)%><p>
  </div>
<% end %>
